<h1 class="mt-4">Friends</h1>

<div class="search-area">
  <h3> Search Friends </h3>
  <%= form_tag search_friend_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding mt-2">
        <%= text_field_tag :friend, params[:friend], placeholder: "Name or Email", 
                                                autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding mt-2">
        <%= button_tag type: :submit, class: "btn btn-dark" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">
  
</div>
<% if !@friend_list.empty? %>
  <%= render "friends/list" %>
<% end %>
